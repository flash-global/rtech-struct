{
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-new": 0,
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "singleQuote": true,
      "semi": false,
      "trailingComma": "none"
    }]
  }
}
